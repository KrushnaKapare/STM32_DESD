#include <stdint.h>
#include <stdio.h>
#include "led.h"
#include "extint.h"

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

extern volatile int ext_flag;
int main(void)
{

	led_init(13);
	extint_init();

	while(1){
		if(ext_flag == 1)
		{
			led_on(13);
			DelayMs(500);
			led_off(13);
		}
		ext_flag=0;
	}

}

